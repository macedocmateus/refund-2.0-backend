generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  employee
  manager
}

enum Category {
  food
  others
  services
  transport
  accommodation
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  role UserRole @default(employee)
  refunds Refunds[]

  @@map("users")
}

model Refunds {
  id String @id @default(uuid())
  name String
  amount Float
  category Category
  filename String

  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("refunds")

}
